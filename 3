#include <iostream>

int main() {
    const int N = 5;
    int arr1[N] = {1, 2, 3, 4, 5};
    int arr2[N];

    int *ptr1 = arr1 + N - 1;
    int *ptr2 = arr2;

    while (ptr1 >= arr1) {
        *ptr2++ = *ptr1--;
    }

    for (int i = 0; i < N; ++i) {
        std::cout << arr2[i] << " ";
    }
    std::cout << std::endl;

    return 0;
}
